@model List<LetterBoxd2.Models.Movie>

<h3>Welcome, @User.Identity.Name</h3>

<!-- Logout form -->
<form action="/Logout" method="post" style="display:inline;">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-link">Logout</button>
</form>

<table>
    <thead>
        <tr>
            <th>Poster</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Release Year</th>
            <th>Average Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    <img src="@movie.PosterUrl" alt="@movie.Title poster" style="width:100px;height:auto;" />
                </td>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.ReleaseYear</td>
                <td>@movie.AverageRating</td>
                <td>
                    <a href="/movies/@movie.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>